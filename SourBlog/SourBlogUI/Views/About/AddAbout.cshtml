@model EntityLayer.Concrete.About
@{
    ViewBag.Title = "AddAbout";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    @using (Html.BeginForm("AddAbout", "About", FormMethod.Post))
    {
        <label>Detail</label>
        @Html.TextAreaFor(x => x.AboutDetails1, new { @class = "form-control", rows = "4" })
        @Html.ValidationMessageFor(x => x.AboutDetails1, "", new { @style = "color:red" })
        <br />
        <label>Detail 2</label>
        @Html.TextAreaFor(x => x.AboutDetails2, new { @class = "form-control", rows = "5" })
        @Html.ValidationMessageFor(x => x.AboutDetails2, "", new { @style = "color:red" })
        <br />
        <label>Image Url 1</label>
        @Html.TextBoxFor(x => x.AboutImage1, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.AboutImage1, "", new { @style = "color:red" })
        <br />
        <label>Image Url 2</label>
        @Html.TextBoxFor(x => x.AboutImage2, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.AboutImage2, "", new { @style = "color:red" })
        <br />
        <button class="btn btn-primary">Add About</button>
    }
</div>